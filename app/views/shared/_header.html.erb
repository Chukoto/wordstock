<header class='top-header'>
  <div class="header-frame">
    <div class='search-bar-contents'>
      <%= link_to image_tag('wordstock.png', size: "111x72", alt: "ロゴ", class: 'logo'), "/" %>
      <form class="search-form" action="#">
        <input class='input-box' placeholder='キーワードから探す'>
        <button class="search-button">
          Search!
        </button>
      </form>
    </div>
    <div class="nav">
      <ul class="lists-left">
        <li><%= link_to "みんなの日記をみる", diaries_path, class: "diaries-list" %></li>
        <% if user_signed_in? %>
          <li><%= link_to "自分の日記をみる", diary_path(current_user.id), class: "diary-list" %></li>
        <% end %>
      </ul>

      <ul class="lists-right">
        <% if user_signed_in? %>
          <li><%= "#{current_user.nickname}でログイン中" %></li>
          <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "logout" %></li>
        <% else %>
          <li><%= link_to "ゲストログイン（閲覧用）", users_guest_sign_in_path, method: :post, class: "login" %></li>
          <li><%= link_to "ログイン", new_user_session_path, class: "login" %></li>
          <li><%= link_to "新規登録", new_user_registration_path, class: "sign-up" %></li>
        <% end %>
      </ul>
    </div>
  </div>
</header>