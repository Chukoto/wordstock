<div>
  <h3>例文投稿回数</h3>
  <% @sentence_post_ranking.each.with_index(1) do |sentence, i| %>
    <div>
      第
      <%= i %>
      位
      <%= "#{sentence.nickname}さん #{sentence.sentence_count.to_i}回" %>
    </div>
  <% end %>
</div>
