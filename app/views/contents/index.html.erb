<div>
  <h3>日記投稿回数</h3>
  <% @diary_post_ranking.each.with_index(1) do |diary, i| %>
    <div>
      第
      <%= i %>
      位
      <%= "#{diary.nickname}さん #{diary.diary_count.to_i}回"%>
    </div>
  <% end %>
</div>


