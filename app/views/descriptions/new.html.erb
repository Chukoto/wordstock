<%= render 'shared/header' %>

<%= form_with model: @description, url: content_descriptions_path, method: :post, local: true do |f| %>

<div class="new-edit-description-main">

  <h1>
    意味を追加
  </h1>

  <div class="error-messages">
    <%= render 'shared/error_messages', model: f.object %>
  </div>

  <div class="font-size-twenty-five">
    <%# 単語の説明 %>
    <div>
      <%= f.text_area :english_text, class:"english_text", placeholder: "English text only（必須）", cols: 50, rows: 10 %>
    </div>
  </div>
  <%# //単語の説明 %>

  <div>
    <%= f.submit "追加する", class:"new-btn"  %>
  </div>

</div>

<% end %>

<%= render "shared/footer" %>